<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.TeamProject.mapper.NoticeMapper">
	
	<!-- 검색 조건에 맞는 전체 게시물 수 조회 -->
	<select id="selectNoticeCount" parameterType="hashmap" resultType="int">
	    SELECT COUNT(*)
	    FROM NOTICE
	    <where>
	        <if test="keyword != null and !keyword.equals('')">
	            <choose>
	                <when test="searchType.equals('title')">
	                    TITLE LIKE '%' || #{keyword} || '%'
	                </when>
	                <when test="searchType.equals('content')">
	                    CONTENTS LIKE '%' || #{keyword} || '%'
	                </when>
	                <when test="searchType.equals('writer')">
	                    USER_ID LIKE '%' || #{keyword} || '%'
	                </when>
	            </choose>
	        </if>
	    </where>
	</select>
	
	<!-- 한 페이지에 보여줄 게시물 목록 조회 -->
    <select id="selectNoticeList" parameterType="hashmap" resultType="com.example.TeamProject.model.Notice">
        SELECT *
        FROM (
            SELECT ROWNUM AS RNUM, A.*
            FROM (
                SELECT NOTICE_NO, TITLE, USER_ID, TO_CHAR(CDATETIME, 'YYYY-MM-DD') AS REG_DATE, CNT
                FROM NOTICE
                <where>
                    <if test="keyword != null and !keyword.equals('')">
                        <choose>
                            <when test="searchType.equals('title')">
                                TITLE LIKE '%' || #{keyword} || '%'
                            </when>
                            <when test="searchType.equals('content')">
                                CONTENTS LIKE '%' || #{keyword} || '%'
                            </when>
                            <when test="searchType.equals('writer')">
                                USER_ID LIKE '%' || #{keyword} || '%'
                            </when>
                        </choose>
                    </if>
                </where>
                ORDER BY NOTICE_NO DESC
            ) A
            WHERE ROWNUM &lt;= #{endRow}
        )
        WHERE RNUM &gt;= #{startRow}
    </select>
    
    <!-- 공지사항 상세보기  -->
	<select id="selectNoticeInfo" parameterType="int" resultType="com.example.TeamProject.model.Notice">
	    SELECT
	        NOTICE_NO AS noticeNo,
	        TITLE,
	        CONTENTS,
	        USER_ID,
	        TO_CHAR(CDATETIME, 'YYYY-MM-DD') AS REG_DATE,
	        CNT
	    FROM NOTICE
	    WHERE NOTICE_NO = #{noticeNo} 
	</select>

	<!-- 공지사항 조회수 증가  -->
	<update id="updateNoticeCnt" parameterType="int">
	    UPDATE NOTICE
	    SET CNT = CNT + 1
	    WHERE NOTICE_NO = #{noticeNo}  
	</update>

	<!-- 공지사항 삭제  -->
	<delete id="deleteNotice" parameterType="int">
	    DELETE FROM NOTICE
	    WHERE NOTICE_NO = #{noticeNo}  
	</delete>
	
	<!-- 공지사항 수정 -->
	<update id="updateNotice" parameterType="hashmap">
	    UPDATE NOTICE
	       SET TITLE = #{title},
	           CONTENTS = #{contents},
	           UDATETIME = SYSDATE
	     WHERE NOTICE_NO = #{noticeNo}
	</update>
	
	<!-- 공지사항 작성 -->
	<insert id="saveNotice" parameterType="hashmap">
	    <selectKey keyProperty="noticeNo" resultType="int" order="BEFORE">
	        SELECT NOTICE_SEQ.NEXTVAL FROM DUAL
	    </selectKey>
	    INSERT INTO NOTICE (
	        NOTICE_NO,
	        USER_ID,
	        TITLE,
	        CONTENTS,
	        CNT,
	        CDATETIME,
	        UDATETIME
	    ) VALUES (
	        #{noticeNo},
	        #{userId},
	        #{title},
	        #{contents},
	        0, <!-- 초기 조회수 0 -->
	        SYSDATE,
	        SYSDATE
	    )
	</insert>
	
	
</mapper>